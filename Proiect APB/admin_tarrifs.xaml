<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proiect_APB"
        xmlns:EmpireElectricDataSetTableAdapters="clr-namespace:Proiect_APB.EmpireElectricDataSetTableAdapters" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Proiect_APB.admin_tarrifs"
        mc:Ignorable="d"
        Title="admin_tarrifs" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Back" HorizontalAlignment="Left" Margin="695,379,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click" Height="35                 " Grid.ColumnSpan="2" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFCDB839" Offset="0"/>
                    <GradientStop Color="#FFEDF1B6" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock x:Name="userText" HorizontalAlignment="Left" Margin="695,334,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="90" Grid.ColumnSpan="2"/>
